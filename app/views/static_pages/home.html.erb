<% if signed_in? %>
    <div class="col-md-12">
      <aside class="span4">
        <section>
          <%= render 'shared/user_info' %>
        </section>
      </aside>
    </div>
<% else %>
    <div class="col-md-12">

      <div class="jumbotron">
        <h2>
          <%= t 'welcome' %>
        </h2>

        <p>
          <%= t 'greeting' %>
        </p>

        <p>
          <%= link_to t('sign_up'), signup_path,
                      class: "btn btn-large btn-primary" %>
        </p>

        <p>
          <%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
        </p>
      </div>
<% end %>