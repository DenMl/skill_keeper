<div class="panel panel-warning">
  <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#skill-group-<%= skill_group.id %>">
    <h4 class="panel-title">
      <p>
        <%= skill_group.name %>
      </p>
    </h4>
  </div>
  <div id="skill-group-<%= skill_group.id %>" class="panel-collapse collapse">
    <div class="panel-body">
      <ul class="list-group">
        <% skill_group.skills.each do |skill| %>
            <li class="list-group-item" data-placement="right" data-toggle="tooltip" title="<%= escape_once(skill.description) %>"><%= skill.name %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
