<% provide(:title, "Edit skill") %>
<h1>Change skill</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@skill) do |f| %>

        <%= render 'fields', f: f %>

        <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
        <%= link_to "Delete", @skill, method: :delete,  data: { confirm: "You sure?" } , class: "btn btn-large btn-danger"%>
        <%= link_to "Cancel", :back, class: "btn btn-large btn-secondary" %>
    <% end %>
  </div>
</div>