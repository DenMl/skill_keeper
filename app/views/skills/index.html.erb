<% provide(:title, 'All skills') %>
<div class="container">
  <h3>
    <%= yield(:title) %>
  </h3>

  <%= will_paginate %>
  <table class="table table-hover" id="skills">
    <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>&nbsp;</th>
    </tr>
    </thead>
    <tbody class="skill-index">

    <% @skills.each do |skill| %>
        <%= render 'skills/skill', skill: skill%>
    <% end %>

    </tbody>
  </table>
  <%= will_paginate %>
  <%= link_to "Create new", new_skill_path( page: @page), remote: true, class: "btn btn-primary" %>
</div>

<div class="modal fade" id="skill-modal" role="dialog" aria-labelledby="" aria-hidden="true">
</div>
