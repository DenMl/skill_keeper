$("ul.errors").html("")
<% if @skill.errors.any? %>
	<% @skill.errors.full_messages.each do |message| %>
		$("ul.errors").append($("<li />").addClass("list-group-item list-group-item-danger").html("<%= message.html_safe %>"))
	<% end %>
<% else %>
	$(".skill-index").html("<%= j (render 'skills/index' ) %>")
	location.reload(true)
	$("#skill-modal").modal("hide")
<% end %>