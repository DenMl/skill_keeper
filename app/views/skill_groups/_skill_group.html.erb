<tr>
  <td><%= skill_group.name %></td>
  <td><%= skill_group.description %></td>
  <td>
    <div class="btn-group btn-group-xs">
      <%= link_to t('skill_group.skill_list_button'), skill_group_path(skill_group), remote: true, class: "btn btn-primary btn-xs" %>
    </div>
  </td>
  <td>
    <div class="btn-group btn-group-xs">
      <%= link_to t('skill_group.edit_button'), edit_skill_group_path(skill_group), remote: true, class: "btn btn-xs btn-default" %>
      <%= link_to t('skill_group.delete_button'), skill_group_delete_path(skill_group), remote: true, class: "btn btn-warning btn-xs" %>
    </div>
  </td>
</tr>