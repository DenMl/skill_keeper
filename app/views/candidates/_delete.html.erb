<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
			<h3><%= t('candidates.title.delete')%></h3>
		</div>
		<div class="modal-body">
			<ul class="errors"></ul>
			<%= t('candidates.confirmation.delete') %> <b><%= @candidate.first_name %> <%= @candidate.last_name %></b>?
		</div>
		<div class="modal-footer">
			<%= link_to t('candidates.button.accept_changes'), candidate_path(@candidate), method: :delete, remote: true, class: 'btn btn-danger' %>
			<%= link_to t('candidates.button.close'), '#', class: 'btn', data: {dismiss: 'modal'} %>
		</div>
	</div>
</div>	