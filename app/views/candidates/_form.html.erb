<%= form_for @candidate, remote: true, html: {class: 'form-horizontal', style: 'display:inline;'} do |f| %>
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title">
            <%= @title %>
          </h4>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col-md-12">
              <ul class="errors list-group"></ul>
              <div>
                <%= f.label t('candidates.field.last_name'), class: 'control-label' %>
                <%= f.text_field :last_name, class: 'form-control' %>
              </div>
              <div>
                <%= f.label t('candidates.field.first_name'), class: 'control-label' %>
                <%= f.text_field :first_name, class: 'form-control' %>
              </div>
              <div>
                <%= f.label t('candidates.field.patronymic'), class: 'control-label' %>
                <%= f.text_field :patronymic, class: 'form-control' %>
              </div>
              <div>
                <%= f.label t('candidates.field.skills'), class: 'control-label' %>
                <%= select_tag '', options_from_collection_for_select(@all_skills, "id", "name", @candidate.skill_ids), id: "skillsSelector", multiple: "multiple" %>
              </div>
              <%= f.hidden_field :skill_ids, id: 'hiddenSkillIds' %>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">
            <%= t('candidates.button.close')%>
          </button>
          <%= f.submit t('candidates.button.accept_changes'), class: 'btn btn-primary' %>
        </div>
      </div>

    </div>

<% end %>
<script>
    $(function() {
        $("#skillsSelector").select2();
        $('#skillsSelector').on("change", function(){
            $('#hiddenSkillIds').val($('#skillsSelector').val());
        });
    });
</script>





