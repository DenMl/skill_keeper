<tr>
  <td>
    <span class="has-tooltip" data-toggle="tooltip" title="<%= t('candidates.tooltip.skill_list')%>">
  		<%= link_to candidate.first_name, candidate_path(candidate), remote: true %>
  	</span>
  </td>
  <td><%= candidate.last_name %></td>
  <td><%= candidate.patronymic %></td>
  <td>
    <div class="btn-group btn-group-xs">
      <%= link_to t('candidates.button.edit'), edit_candidate_path(candidate), remote: true, class: 'btn btn-xs btn-default' %>
      <%= link_to t('candidates.button.delete'), candidate_delete_path(candidate), remote: true, class: 'btn btn-warning btn-xs' %>
    </div>
  </td>
</tr>
