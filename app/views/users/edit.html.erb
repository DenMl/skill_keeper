<% provide(:title, "Edit user") %>
<div class="row">
  <div class="col-md-4">
  </div>
  <div class="col-md-4">
    <h3>
      <%=yield(:title)%>
    </h3>
    <%= form_for(@user) do |f| %>
        <%= render 'fields', f: f %>
        <%= f.submit "Save changes", class: "btn btn-primary btn-block" %>
    <% end %>

    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">change</a>
  </div>
</div>
<div class="col-md-4">
</div>
